{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["html"],
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "warn",
    "no-useless-escape": "warn",
    "no-undef": ["error", { "globals": { "gtag": "readonly", "Cerebras": "readonly" } }]
  },
  "globals": {
    "getInteractionDepth": "readonly",
    "realScoutConfig": "readonly",
    "requestQueue": "readonly",
    "openLightbox": "readonly"
  }
} 