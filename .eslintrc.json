{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["html", "react"],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "warn",
    "no-useless-escape": "warn",
    "no-undef": ["error", { "globals": { "gtag": "readonly", "Cerebras": "readonly" } }],
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off"
  },
  "globals": {
    "getInteractionDepth": "readonly",
    "realScoutConfig": "readonly",
    "requestQueue": "readonly",
    "openLightbox": "readonly"
  }
} 